{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "info"
			},
			"suspicious": {
				"noExplicitAny": "info"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	}
}
